def consistent(l):
    i=2
    while i<len(l) and (l[i]-l[i-1] == 1 or l[i]-l[i-1] == -1):
        i=i+1
    if i == len(l)-1:
        return True
    return False
def solution(l,n):
    if len(l) == 2*n+1 and l[0] == 0 and l[len(l)-1] == 0:
        return True
    return False
def bcktRec(l,n):
    if solution(l,n):
        return l
    sol = []
    for i in range(0,2):
        l = l +[i-1]
        if consistent(l):
            sol = sol + bcktRec(l[:],n)
            l=l[:-1]
    return sol

print(bcktRec([], 4))
      
        